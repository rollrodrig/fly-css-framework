extends _layout.pug
include _mixins
block content
	article.fy-bx
		+title('Icon')
		+resume
			p Usefull icon using the library <a href="https://fontawesome.com/icons?d=gallery&m=free" target="_blank">FontAwesome</a> 

		//- spec
		+section
			+subtitle('Usage')
			+description
				p Add the stylesheet <code>font-awesome.css</code>
				p Add the folder <code>fonts</code> inside your project next to the <code>css</code> folder
			+demo
				+example.
					<link rel="stylesheet" href="css/font-awesome.css">
				+code.
					<link rel="stylesheet" href="css/font-awesome.css">

		//- spec
		+section
			+subtitle('Example')
			+description
			+demo
				+example.
					<div class="fy-ic"><i class="fas fa-save"></i></div>
					<button class="fy-ic"><i class="fas fa-save"></i></button>
				+code.
					<div class="fy-ic"><i class="fas fa-save"></i></div>
					<button class="fy-ic"><i class="fas fa-save"></i></button>
				+open_example('icon')

		//- spec
		+section
			+subtitle('Sizes')
			+description
			+properties([{'r':'-xs','d':'Extra small'},{'r':'-s','d':'Small'},{'r':'-l','d':'Large'}])
			+demo
				+example.
					<button class="fy-ic -xs"><i class="fas fa-save"></i></button>
					<button class="fy-ic -s"><i class="fas fa-save"></i></button>
					<button class="fy-ic"><i class="fas fa-save"></i></button>
					<button class="fy-ic -l"><i class="fas fa-save"></i></button>
				+code.
					<button class="fy-ic -xs"><i class="fas fa-save"></i></button>
					<button class="fy-ic -s"><i class="fas fa-save"></i></button>
					<button class="fy-ic"><i class="fas fa-save"></i></button>
					<button class="fy-ic -l"><i class="fas fa-save"></i></button>
				+open_example('icon')

